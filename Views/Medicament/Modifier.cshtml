@model WebGsbMedicament.Models.Metier;
@{
    ViewBag.Title = "Modifier";
    Layout = "~/Views/Shared/_LayoutMedicament.cshtml";
}

<h2>Modifier une precription</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

    <div class="card col-8 mx-auto mt-5">
        <div class="card-body">
            <h3 class="card-title">Modifier une prescription</h3>
            <div class="form-horizontal">
         <hr/>

         @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Id Medicament -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend mr-2 col-lg-4 col-xl-3">
                        <span class="input-group-text" id="id-medicament-input">Id Medicament : </span>
                    </div>
                    @Html.EditorFor(model => model.Id_Medicament, new { htmlAttributes = new {@class = "form-control", @disabled= "" } })
                    @Html.ValidationMessageFor(model => model.Id_Medicament, "", new { @class ="text-danger" })
                    <input name="Id_manga" type="HIDDEN" value=@(@Model.Id_Medicament) id="Id_Medicament" class="form-control" aria-describedby="id-medicament-input" />
                </div>


                <!-- Id DOSAGE -->
                <div class="input-group mb-3">
                    <div class="input-group-prepend mr-2 col-lg-4 col-xl-3">
                        <span class="input-group-text" id="scenariste-input">Dosage :
                        </span>
                    </div>
                    @Html.EditorFor(model => model.Dosage, new { htmlAttributes = new {@class = "form-control", @disabled= "" } })
					@Html.ValidationMessageFor(model => model.Dosage, "", new { @class ="text-danger" })
                    <input name="Id_Dosage" type="HIDDEN" value=@(@Model.Id_Dosage) id="Id_Dosage" class="form-control" aria-describedby="scenariste-input" />
                    </div>
                </div>

                <!-- Id type individu -->
                <div class="input-group mb-3">
					<div class="input-group-prepend mr-2 col-lg-4 col-xl-3">
						<span class="input-group-text" id="id-prescription-input">Id Prescription : </span>
					</div>
					@Html.EditorFor(model => model.Id_Type, new { htmlAttributes = new {@class = "form-control", @disabled= "" } })
					@Html.ValidationMessageFor(model => model.Id_Prescription, "", new { @class ="text-danger" })
                <input name="Id_Prescription" type="HIDDEN" value=@(@Model.Id_Prescription) id="Id_Prescription" class="form-control" aria-describedby="id-type-individu-input" />
                    </div>
                </div>






		